generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
}

model Inventory {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  quantity    Int
  expiration  DateTime?
  status      Status
  reorder     Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
}

model Category {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  items Inventory[]
}

enum Role {
  USER
  ADMIN
}

enum Status {
  FULL
  LOW
  OUTOFSTOCK
  FRESH
  EXPIRED
}
